#include<iostream>
using namespace std;
int main()
{
   int a[100],n,i,max,min;
   cout<<"Enter the size of array ";
   cin>>n;
   cout<<"Enter the elements of array ";
   for(i=0;i<=n-1;i++){
       cin>>a[i];
   }
   max = a[0];
   for(i=0;i<=n-1;i++){
       if(max < a[i])
       max=a[i];
   }
   min = a[0];
   for(i=0;i<=n-1;i++){
       if(min > a[i])
       min = a[i];
   }
   
   cout<<"Largest element = "<<max;
   cout<<"\nsmallest element = "<<min;
   return 0;
}
