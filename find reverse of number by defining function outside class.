#include<iostream>
using namespace std;
class reverse{
    public:
    void num1(int);
};
void reverse :: num1(int n){
    int r,m=0;
    while(n!=0){
        r=n%10;
        n=n/10;
        m=m*10+r;
    }
    cout<<"\n Reverse no.: "<<m<<endl;
}
int main(){
    reverse obj;
    obj.num1(542);
    return 0;
}
